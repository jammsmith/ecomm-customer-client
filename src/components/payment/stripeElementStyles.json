{
  "theme": "flat",
  "variables": {
    "fontFamily": " \"Gill Sans\", sans-serif",

    "fontLineHeight": "1.5",
    "borderRadius": "5px",
    "colorBackground": "#FFF",
    "colorPrimaryText": "#28211e"
  },
  "rules": {
    ".Block": {
      "backgroundColor": "var(--colorBackground)",
      "boxShadow": "none",
      "padding": "12px",
      "outline": "2px solid transparent"
    },
    ".Input": {
      "border": "1px solid #b09d95",
      "fontSize": "1rem",
      "padding": "9.5px",
      "outline": "2px solid #FFF",
      "outlineOffset": "2px"
    },
    ".Input:focus": {
      "borderColor": "transparent",
      "boxShadow": "0px 0px 2px 2px #8DD9BF",
      "outline": "none"
    },
    ".Input:disabled, .Input--invalid:disabled": {
      "color": "#c6c6c6"
    },
    ".Input--invalid": {
      "borderColor": "transparent",
      "boxShadow": "0px 0px 2px 2px #DC143C",
      "outline": "none"
    },
    ".Tab": {
      "padding": "10px 12px 8px 12px",
      "border": "none"
    },
    ".Tab:hover": {
      "border": "none",
      "boxShadow": "0px 1px 1px rgba(0, 0, 0, 0.03), 0px 3px 7px rgba(18, 42, 66, 0.04)"
    },
    ".Tab--selected, .Tab--selected:focus, .Tab--selected:hover": {
      "border": "none",
      "backgroundColor": "#fff",
      "boxShadow": "0 0 0 1.5px var(--colorPrimaryText), 0px 1px 1px rgba(0, 0, 0, 0.03), 0px 3px 7px rgba(18, 42, 66, 0.04)"
    },
    ".Label": {
      "fontSize": "1rem",
      "fontWeight": "500"
    }
  }
}
